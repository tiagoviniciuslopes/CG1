#include "colors.inc"
   
camera{
    location <0,0,-50>
    look_at <0,0,0>
}   
   
light_source{
    <50,50,-100>
    White
}
sky_sphere{
    pigment{
        gradient y
        color_map{
            [0 color White]
            [1 color Blue]    
        }
        translate <0,-.5,0>
    }
}   
 

